<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id='project_project_view_tree' model='ir.ui.view'>
            <field name="name">project.project.tree.inh</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="available_hour" widget="timesheet_uom"/>
                </xpath>
            </field>
        </record>

        <record id="project_project_view_pivot" model="ir.ui.view">
            <field name="name">project.project.view.pivot</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <pivot string="Pipeline Analysis" disable_linking="True">
                    <field name="name" type="row"/>
                    <field name="total_sale_hour" type="col"/>
                    <field name="total_work_hour" type="col"/>
                    <field name="available_hour" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,form,pivot</field>
            <field name="view_id" ref="view_project_kanban"/>
            <field name="search_view_id" ref="view_project_project_filter"/>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new project
                </p><p>
                    Or <a type="action" name="%(project.ir_actions_server_project_sample)d" tabindex="-1">activate a sample project</a> to play with.
                </p>
            </field>
        </record>

    </data>
</odoo>
